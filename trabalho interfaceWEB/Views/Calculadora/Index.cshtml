<!-- Views/Calculadora/Index.cshtml -->

@{
    ViewData["Title"] = "Calculadora";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Se você tiver um layout compartilhado
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Calculadora" asp-action="Calcular" method="post">
    <label for="numero1">numero1</label>
    <input type="text" name="operando1" required />

    <label for="numero2">numero2:</label>
    <input type="text" name="operando2" required />

    <label for="operacao">Operação:</label>
    <select name="operacao" required>
        <option value="soma">Soma</option>
        <option value="subtracao">Subtração</option>
        <option value="multiplicacao">Multiplicação</option>
        <option value="divisao">Divisão</option>
    </select>

    <button type="submit">Calcular</button>
</form>

@if (ViewBag.Resultado != null)
{
    <div>
        <h3>Resultado:</h3>
        <p>@ViewBag.Resultado</p>
    </div>
}

@if (ViewBag.Erro != null)
{
    <div style="color: red;">
        <p>@ViewBag.Erro</p>
    </div>
}
